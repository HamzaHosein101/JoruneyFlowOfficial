<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCDCF4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Currency Converter Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#D6E4FF"
            app:strokeWidth="1dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Currency Converter"
                    android:textStyle="bold"
                    android:textColor="#0D1B3E"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Amount"
                        android:inputType="numberDecimal"
                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#0D1B3E"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/spinnerFromCurrency"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/spinner_background"
                            android:paddingStart="16dp"
                            android:paddingEnd="40dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:textAlignment="viewStart"
                            android:gravity="start|center_vertical" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#0D1B3E"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/spinnerToCurrency"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/spinner_background"
                            android:paddingStart="16dp"
                            android:paddingEnd="40dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:textAlignment="viewStart"
                            android:gravity="start|center_vertical" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D6E4FF"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/txtConvertedAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Converted: $0.00"
                    android:textStyle="bold"
                    android:textColor="#2E5BFF"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Exchange Rate Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#D6E4FF"
            app:strokeWidth="1dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exchange Rate Information"
                    android:textStyle="bold"
                    android:textColor="#0D1B3E"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exchange rates are updated regularly from a live API. Rates may vary slightly from actual market rates."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Refresh Rates Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRefreshRates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh Exchange Rates"
            android:textColor="@android:color/white"
            app:cornerRadius="8dp"
            app:backgroundTint="#183371"
            android:paddingVertical="14dp"
            app:icon="@android:drawable/ic_menu_rotate"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>