<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Left side - Date, Time and Duration -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:minWidth="80dp">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 15"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:30"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:00 PM"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Center - Type Text -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/typeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textSize="11sp"
                android:textColor="#2E5BFF"
                android:textStyle="bold"
                android:background="#FFFFFF"
                android:padding="4dp"
                android:layout_marginBottom="4dp"
                android:maxWidth="80dp"
                android:ellipsize="end"
                android:singleLine="true" />

        </LinearLayout>

        <!-- Right side - Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flight to Paris"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Departure from JFK Airport"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JFK Airport, New York"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$850.00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Right side - Checkbox, Edit and Delete buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <CheckBox
                android:id="@+id/checkBoxCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#2E5BFF"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/btnEdit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#2E5BFF"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:padding="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#FF4444" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>