<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    app:strokeColor="@android:color/transparent"
    app:strokeWidth="1dp"
    app:shapeAppearanceOverlay="@style/RoundedImageStyle"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <!-- Left date pill (trip date) -->
        <LinearLayout
            android:id="@+id/leftDatePill"
            android:layout_width="56dp"
            android:layout_height="64dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_chip_round">

            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025"
                android:textSize="12sp"
                android:textColor="#7085C2"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct"
                android:textStyle="bold"
                android:textColor="#1A47B8"/>

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A47B8"/>
        </LinearLayout>

        <!-- Right content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <!-- Title / Location -->
            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paris, France"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <!-- Meta row: username chip + stars -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvUserChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/bg_chip_round"
                    android:text="Hamza"
                    android:textColor="#183371"
                    android:textSize="12sp"/>

                <RatingBar
                    android:id="@+id/ratingBarStatic"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:isIndicator="true"
                    android:layout_marginStart="8dp"
                    android:progressTint="@color/jf_star"
                    android:secondaryProgressTint="@color/jf_star"
                    android:indeterminateTint="@color/jf_star" />
            </LinearLayout>

            <!-- Comment -->
            <TextView
                android:id="@+id/tvComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Great food near the river. Avoid rush hour."
                android:textColor="#444444"/>

            <!-- Actions -->
            <LinearLayout
                android:id="@+id/actionsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/btnReport"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Report"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#FB7A7A" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="#FB7A7A" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
