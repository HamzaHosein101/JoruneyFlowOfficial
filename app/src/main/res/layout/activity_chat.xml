<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <!-- Top toolbar with solid blue matching My Trips -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#183371"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="AI Travel Assistant"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/menu_chat" />

    <!-- Scrolling list of messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/typingIndicator"
        tools:listitem="@layout/item_message_user" />

    <!-- Typing indicator (shows when AI is thinking) -->
    <LinearLayout
        android:id="@+id/typingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_bot_message"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/quickActionsScrollView"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI is thinking..."
            android:textSize="12sp"
            android:textColor="#757575" />
    </LinearLayout>

    <!-- Quick Actions Row -->
    <HorizontalScrollView
        android:id="@+id/quickActionsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scrollbars="none"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/quickActionsChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:chipSpacing="8dp">

            <!-- Flight Search -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipFlights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœˆï¸ Find Flights"
                android:textColor="#000000"
                app:chipBackgroundColor="@android:color/white"
                app:chipStrokeColor="#000000"
                app:chipStrokeWidth="2dp"
                app:chipCornerRadius="20dp"
                style="@style/Widget.MaterialComponents.Chip.Action" />

            <!-- Hotel Search -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipHotels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¨ Find Hotels"
                android:textColor="#000000"
                app:chipBackgroundColor="#FFFFFF"
                app:chipStrokeColor="#000000"
                app:chipStrokeWidth="2dp"
                app:chipCornerRadius="20dp"
                style="@style/Widget.MaterialComponents.Chip.Action" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Bottom input area with blue theme -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#183371"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Text input box -->
            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_input_white"
                android:hint="Ask me anything about travel..."
                android:textColorHint="#90A4AE"
                android:textColor="#263238"
                android:padding="12dp"
                android:maxLines="4"
                android:inputType="textMultiLine|textCapSentences"
                android:imeOptions="actionSend"
                android:importantForAutofill="no" />

            <!-- Send button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_send"
                android:contentDescription="Send message"
                app:fabCustomSize="48dp"
                app:backgroundTint="@android:color/white"
                app:tint="#3F51B5" />
        </LinearLayout>

        <!-- Powered by text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ðŸ¤– Powered by Google Gemini AI"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>