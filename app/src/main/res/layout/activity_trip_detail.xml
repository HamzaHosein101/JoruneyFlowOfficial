<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCDCF4">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#183371"
            android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
            app:title="Trip"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header card (destination/dates/budget) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#2E5BFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtHeaderDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Destination"
                        android:textStyle="bold"
                        android:textColor="#0D1B3E"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtHeaderDates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jan 1 â€” Jan 5, 2026"
                        android:textColor="#2E5BFF"
                        android:textSize="13sp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/txtHeaderBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:paddingTop="8dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="4dp"
                        android:background="#AEF89B"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginBottom="2dp"
                        android:includeFontPadding="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Feature grid -->
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 app:useDefaultMargins="true"
                app:rowCount="3"
                app:columnCount="2">

                <!-- Card template: icon + label, center aligned -->
                <!-- AI Chatbot -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardChatbot"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    app:layout_columnWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#76A0F8"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="#FFFFFF">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_btn_speak_now"
                            app:tint="#2E5BFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AI Chatbot"
                            android:textColor="#0D1B3E"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Itinerary -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardItinerary"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    app:layout_columnWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#76A0F8"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            app:tint="#26A69A" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Itinerary"
                            android:textColor="#0D1B3E"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Checklist -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardChecklist"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    app:layout_columnWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#76A0F8"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="#43A047" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Checklist"
                            android:textColor="#0D1B3E"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Expense tracker -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardExpenses"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    app:layout_columnWeight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#76A0F8"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_save"
                            app:tint="#FFB300" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expense tracker"
                            android:textColor="#0D1B3E"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Reviews (full width) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardReviews"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    app:layout_columnSpan="2"
                    app:layout_columnWeight="2"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="#397EFF"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/btn_star_big_on"
                            app:tint="#039BE5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reviews"
                            android:textColor="#0D1B3E"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingTop="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </androidx.gridlayout.widget.GridLayout>

            <!-- Weather -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#397EFF"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="#F8F8F8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtWeatherTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Weather"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#0D1B3E" />

                        <TextView
                            android:id="@+id/txtWeatherStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loadingâ€¦"
                            android:textSize="13sp"
                            android:textColor="#2E5BFF"/>
                    </LinearLayout>


                    <!-- Current conditions -->
                    <LinearLayout
                        android:id="@+id/rowCurrent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/txtCurrentEmoji"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â›…"
                            android:textSize="28sp"
                            android:paddingEnd="8dp"/>

                        <TextView
                            android:id="@+id/txtCurrentTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--Â°"
                            android:textStyle="bold"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/txtCurrentLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Now"
                            android:textSize="14sp"
                            android:paddingStart="6dp"/>
                    </LinearLayout>

                    <!-- Daily forecast -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:overScrollMode="never"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/stripDaily"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>

                    <!-- Hourly forecast (hidden until we have data) -->
                    <HorizontalScrollView
                        android:id="@+id/hourlyScroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:visibility="gone"
                        android:overScrollMode="never"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/stripHourly"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>



